<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back,"
            android:textSize="20dp"
            android:textColor="#fff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User1"
            android:textColor="#fff"
            android:layout_below="@id/t1"
            android:textSize="28dp"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.04"/>

        <ImageView
            android:id="@+id/addImg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:src="@drawable/add_circle_img" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:background="@drawable/layout_roundbg"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health Status"
            android:textSize="22dp"
            android:textColor="#000"
            android:paddingLeft="40dp"
            android:paddingTop="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Everything is good"
            android:textSize="35dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="40dp"
            android:paddingTop="10dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:letterSpacing="0.02"
                    android:text="Health Parameters"
                    android:textColor="#516b9e"
                    android:textSize="25dp"
                    android:textStyle="bold" />



            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/r1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:id="@+id/i1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/netflix" />

                    <TextView
                        android:id="@+id/tt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/i1"
                        android:fontFamily="sans-serif-black"
                        android:letterSpacing="0.03"
                        android:text="Glucose"
                        android:textColor="#516b9e"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tt1"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/i1"
                        android:text="139 or below"
                        android:textColor="#516b9e"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="130"
                        android:textColor="#516b9e"
                        android:textSize="23dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/r2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/r1"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:id="@+id/i2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/spotify" />

                    <TextView
                        android:id="@+id/tt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/i2"
                        android:fontFamily="sans-serif-black"
                        android:letterSpacing="0.03"
                        android:text="Respiration"
                        android:textColor="#516b9e"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tt2"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/i2"
                        android:text="12-16"
                        android:textColor="#516b9e"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="14"
                        android:textColor="#516b9e"
                        android:textSize="23dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/r3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/r2"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:id="@+id/i3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/dribble" />

                    <TextView
                        android:id="@+id/tt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/i3"
                        android:fontFamily="sans-serif-black"
                        android:letterSpacing="0.03"
                        android:text=" Body Temperature"
                        android:textColor="#516b9e"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tt3"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/i3"
                        android:text="36.5-37.5"
                        android:textColor="#516b9e"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="36.5"
                        android:textColor="#516b9e"
                        android:textSize="23dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/r4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/r3"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:id="@+id/i4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/amazon" />

                    <TextView
                        android:id="@+id/tt4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/i4"
                        android:fontFamily="sans-serif-black"
                        android:letterSpacing="0.03"
                        android:text="Blood Pressure"
                        android:textColor="#516b9e"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tt4"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/i4"
                        android:text="140-80mg/dl"
                        android:textColor="#516b9e"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="120/80"
                        android:textColor="#516b9e"
                        android:textSize="23dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/r5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/r4"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:id="@+id/i5"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/amazon" />

                    <TextView
                        android:id="@+id/tt5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/i5"
                        android:fontFamily="sans-serif-black"
                        android:letterSpacing="0.03"
                        android:text="Oxygen Saturation"
                        android:textColor="#516b9e"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tt5"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/i5"
                        android:text="95%-96%"
                        android:textColor="#516b9e"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="95%"
                        android:textColor="#516b9e"
                        android:textSize="23dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/r6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/r4"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:id="@+id/i6"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/download1" />

                    <TextView
                        android:id="@+id/tt6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/i6"
                        android:fontFamily="sans-serif-black"
                        android:letterSpacing="0.03"
                        android:text="Oxygen Saturation"
                        android:textColor="#516b9e"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tt6"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/i6"
                        android:text="95%-96%"
                        android:textColor="#516b9e"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="95%"
                        android:textColor="#516b9e"
                        android:textSize="23dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>